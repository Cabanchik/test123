<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="weather" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,0" >
                <Label Content="Enter the name of the city:"></Label>
                <TextBox Margin="0,5,0,0" x:Name="countryName" ></TextBox>
                <Button Margin="0,5,0,0" Content="Show result" Click="Button_Click"></Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label x:Name="temp"></Label>
                <Label x:Name="info"></Label>
                <Label x:Name="windSpeed"></Label>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
